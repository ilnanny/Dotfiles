
## cambia il nome del kernel "linux"

 eselect kernel list
 sudo eselect kernel set "linux-stable-git-4.12.8"
 cd linux

 /usr/bin/time -v make KCFLAGS="-march=native" -j "$(nproc)" olddefconfig all

 (mountpoint -q /boot || mount /boot) && make install modules_install && grub-mkconfig -o /boot/grub/grub.cfg
 emerge -avtq '@module-rebuild'
