#  --  https://wiki.gentoo.org/wiki/Plymouth#Bootup_logo

  emerge --ask sys-boot/plymouth

#  --  Genkernel-next
  echo "sys-kernel/genkernel-next plymouth" >> /etc/portage/package.use/genkernel-next
  emerge --ask sys-kernel/genkernel-next
  genkernel --udev initramfs
  nano -w /etc/genkernel.conf

  PLYMOUTH="yes"

  PLYMOUTH_THEME="solar"


#  --  Dracut
  echo "sys-boot/plymouth -udev" >> /etc/portage/package.use/plymouth
  emerge --ask sys-boot/plymouth

#  --  Openrc
  emerge --ask sys-boot/plymouth-openrc-plugin

  nano -w  /etc/rc.conf

  rc_interactive=”NO”

#  --  Themes
  plymouth-set-default-theme --list

  plymouth-set-default-theme solar


  nano -w /etc/default/grub

  GRUB_CMDLINE_LINUX_DEFAULT='quiet splash'
  GRUB_GFXMODE=1366x768x24
  GRUB_GFXPAYLOAD_LINUX=keep

#  --  Utilizzo
  genkernel initramfs
o
  dracut --force

  grub-mkconfig -o /boot/grub/grub.cfg




#  --




















