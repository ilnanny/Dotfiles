#Imposta l'utente Root
set -o errexit
[[ $(whoami) == 'root' ]] || exec sudo su -c $0 root
#
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|            Programma di aggiornamento e pulizia di Devuan              |"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                         Aggiorno i Repository                          |"
            apt update -y
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                          Aggiorno il Kernel                            |"
           apt dist-upgrade -y
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                  Rimuovo le dipendenze non necessarie                  |"
           apt autoremove -y
           apt autoclean -y
           apt clean -y
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                    Svuoto Cestino e File Temporanei                    |"
          rm -fr /tmp/*
          rm -rfv ~/.local/share/Trash/*
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                        SISTEMA AGGIORNATO E PULITO                     |"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
echo "|                                                    Chiudi il Terminale |"
echo "|_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-|"
echo "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
exit 4
