set -o errexit
[[ $(whoami) == 'root' ]] || exec sudo su -c $0 root
=
yellow='\033[01;33m'
blue='\033[01;34m'
clear
=====================================================================

printf "${yellow}test test test\n"


printf "${blue}test test test.\n"
exit 4


















































































































