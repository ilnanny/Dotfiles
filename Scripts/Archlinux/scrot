FILENAME=`date +%Y-%m-%d-%H-%M-%S`.png
scrot -d 0.1 "$FILENAME" -e 'xclip -selection clipboard -t image/png $f && mv $f ~/Pictures/screenshots/'
notify-send "ðŸ“· Saved screenshot as $FILENAME"
