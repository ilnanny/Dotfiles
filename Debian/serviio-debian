sudo apt-get install ffmpeg
sudo apt-get install dcraw

dpkg --get-selections | grep jre

sudo apt-get install openjdk-11-jre

sudo -H bash
useradd -r -s /bin/false serviio
mkdir -p /opt
cd /opt
wget http://download.serviio.org/releases/serviio-1.10.1-linux.tar.gz
tar zxvf serviio-1.10.1-linux.tar.gz
rm serviio-1.10.1-linux.tar.gz
ln -s serviio-1.10.1 serviio
chown -R root:root serviio-1.10.1
cd serviio-1.10.1
mkdir log
chown -R serviio:serviio library log


sudo geany /lib/systemd/system/serviio.service

[Unit]
Description=Serviio Media Server
After=syslog.target local-fs.target network.target

[Service]
Type=simple
User=serviio
Group=serviio
ExecStart=/opt/serviio/bin/serviio.sh
ExecStop=/opt/serviio/bin/serviio.sh -stop
KillMode=none
Restart=on-abort

[Install]
WantedBy=multi-user.target



systemctl daemon-reload
systemctl enable serviio
systemctl start serviio

sudo /opt/serviio-1.10.1/bin/serviio-console.sh 
